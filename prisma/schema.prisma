generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TodoItem {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  done        Boolean
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  password   String
  name       String
  favourites Favourite[]
}

model Favourite {
  id       Int    @id
  name     String
  status   String
  species  String
  type     String
  created  String
  url      String
  origin   String
  gender   String
  image    String
  user     User?  @relation(fields: [userId], references: [id])
  userId   Int?
  location String
}

